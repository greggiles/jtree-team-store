<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>


<div class="row">

 <form action="/">
   <label>Gender:</label>
  <select name="sex">
    {{#select query.sex}}
    <option value="*"></option>
    <option value="Men">Men</option>
    <option value="Women">Women</option>
    {{/select}}
  </select>
  <label>Family:</label>
  <select name="family">
    {{#select query.family}}
    <option value="*"></option>
    <option value="Pinnacle">Pinnacle</option>
    <option value="Vpro">VPro</option>
    <option value="Classic">Classic</option>
    <option value="Bibs">Bibs</option>
    <option value="Shorts">Shorts</option>
    <option value="Jackets">Jackets</option>
    <option value="Arms">Arms</option>
    <option value="Legs">Legs</option>
    <option value="Shirts">Shirts</option>
    {{/select}}
  </select>
  <label>Size:</label>
  <select name="size">
    {{#select query.size}}
    <option value="*"></option>
    <option value="XS">XS</option>
    <option value="SM">S</option>
    <option value="MD">M</option>
    <option value="LG">L</option>
    <option value="XL">XL</option>
    <option value="XXL">XXL</option>
    {{/select}}
  </select>
      <input type="submit" value="Filter" />
  </form>

</div>


{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
